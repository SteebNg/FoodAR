<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_4sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_8sdp">

    <FrameLayout
        android:id="@+id/layoutOrderAgainFoodItem"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_rectangle_rounded_corner" />

        <ImageView
            android:id="@+id/imageOrderAgainFood"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/burbur_2"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp" />
    </FrameLayout>

    <TextView
        android:id="@+id/textOrderAgainFoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/layoutOrderAgainFoodItem"
        app:layout_constraintTop_toBottomOf="@+id/layoutOrderAgainFoodItem"
        app:layout_constraintEnd_toEndOf="@+id/layoutOrderAgainFoodItem"
        android:text="Combo Deluxe"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:fontFamily="@font/alata"
        android:textColor="@color/primary_text"
        android:maxLines="2"
        android:textSize="@dimen/_10ssp"
        android:maxWidth="@dimen/_80sdp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textOrderAgainFoodName"
        app:layout_constraintStart_toStartOf="@+id/textOrderAgainFoodName"
        app:layout_constraintEnd_toEndOf="@+id/textOrderAgainFoodName"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/_16sdp">

        <RatingBar
            android:id="@+id/ratingOrderAgain"
            android:layout_width="@dimen/_59sdp"
            android:layout_height="@dimen/_12sdp"
            style="@style/CustomRatingBar"
            android:rating="3.5"
            android:scaleX="0.7"
            android:scaleY="0.7"/>

        <TextView
            android:id="@+id/textOrderAgainFoodPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RM16.99"
            android:textColor="@color/secondary_text"
            android:fontFamily="@font/alata"
            android:textSize="@dimen/_8ssp"
            android:layout_marginStart="@dimen/_8sdp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>