<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordSuccessActivity"
    android:background="@color/bg_dark">

    <ImageView
        android:id="@+id/imageForgotPassSuccess"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_140sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/check_mail"
        android:layout_marginTop="@dimen/_100sdp"
        android:layout_marginEnd="@dimen/_12sdp" />

    <TextView
        android:id="@+id/textForgotPassSuccessTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imageForgotPassSuccess"
        app:layout_constraintStart_toStartOf="@+id/imageForgotPassSuccess"
        app:layout_constraintEnd_toEndOf="@+id/imageForgotPassSuccess"
        android:text="Check your email"
        android:textSize="@dimen/_16ssp"
        android:layout_marginTop="@dimen/_36sdp"
        android:fontFamily="@font/alata"
        android:textStyle="bold"
        android:textColor="@color/primary_text"/>

    <TextView
        android:id="@+id/textForgotPassSuccessDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textForgotPassSuccessTitle"
        app:layout_constraintStart_toStartOf="@+id/textForgotPassSuccessTitle"
        app:layout_constraintEnd_toEndOf="@+id/textForgotPassSuccessTitle"
        android:text="Check your email for password reset"
        android:textSize="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_4sdp"
        android:fontFamily="@font/alata"
        android:textColor="@color/primary_text"
        android:gravity="center"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonForgotPassSuccessConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textForgotPassSuccessDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Confirm"
        android:fontFamily="@font/alata"
        android:background="@drawable/bg_rectangle_white"
        android:backgroundTint="@color/lightGreen"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:textAllCaps="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>