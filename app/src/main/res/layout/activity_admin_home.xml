                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More"
                android:textColor="@color/blueText"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/alata"
                android:gravity="end"
                android:layout_marginEnd="@dimen/_20sdp"/>

            <View
