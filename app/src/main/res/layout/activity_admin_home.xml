                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                app:layout_constraintTop_toBottomOf="@+id/bgAdminHomeRevenueMonthly"
                android:background="@drawable/bg_rectangle_rounded_corner"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:backgroundTint="@color/GreenishGrey" />

            <TextView
                android:id="@+id/textAdminHomeRevenueYearlyTitle"
                app:layout_constraintStart_toStartOf="@+id/bgAdminHomeRevenueYearly"
                app:layout_constraintTop_toTopOf="@+id/bgAdminHomeRevenueYearly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yearly Revenue"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                android:textSize="@dimen/_15ssp"
                android:fontFamily="@font/alata"
                android:gravity="start"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_4sdp"/>

            <View
                android:id="@+id/bgAdminHomeRevenueYearlyTotalRevenue"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_56sdp"
                app:layout_constraintStart_toStartOf="@+id/textAdminHomeRevenueYearlyTitle"
                app:layout_constraintTop_toBottomOf="@+id/textAdminHomeRevenueYearlyTitle"
                android:background="@drawable/bg_rectangle_outlined_rounded_corner"
                android:layout_marginTop="@dimen/_8sdp"
                android:backgroundTint="@color/GreenishGreySecondary" />

            <TextView
                android:id="@+id/textAdminHomeRevenueYearlyTotalRevenueSubtitle"
                app:layout_constraintStart_toStartOf="@+id/bgAdminHomeRevenueYearlyTotalRevenue"
                app:layout_constraintTop_toTopOf="@+id/bgAdminHomeRevenueYearlyTotalRevenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Revenue"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/alata"
                android:gravity="start"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_4sdp"/>

            <TextView
                android:id="@+id/textAdminHomeRevenueYearlyTotalRevenueBody"
                app:layout_constraintStart_toStartOf="@+id/textAdminHomeRevenueYearlyTotalRevenueSubtitle"
                app:layout_constraintTop_toBottomOf="@+id/textAdminHomeRevenueYearlyTotalRevenueSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generated"
                android:textColor="@color/hintColor"
                android:textSize="@dimen/_7ssp"
                android:fontFamily="@font/alata"
                android:gravity="start" />

            <TextView
                android:id="@+id/textAdminHomeRevenueYearlyTotalRevenueNum"
                app:layout_constraintStart_toStartOf="@+id/textAdminHomeRevenueYearlyTotalRevenueSubtitle"
                app:layout_constraintBottom_toBottomOf="@+id/bgAdminHomeRevenueYearlyTotalRevenue"
