                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                app:layout_constraintTop_toBottomOf="@+id/textAdminHomeRevenueReportTitle"
                android:background="@drawable/bg_rectangle_rounded_corner"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:backgroundTint="@color/pinkishGreyBlue" />

            <TextView
                android:id="@+id/textAdminHomeRevenueMonthlyTitle"
                app:layout_constraintStart_toStartOf="@+id/bgAdminHomeRevenueMonthly"
                app:layout_constraintTop_toTopOf="@+id/bgAdminHomeRevenueMonthly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly Revenue"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                android:textSize="@dimen/_15ssp"
                android:fontFamily="@font/alata"
                android:gravity="start"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_4sdp"/>

            <View
                android:id="@+id/bgAdminHomeRevenueMonthlyTotalRevenue"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_56sdp"
                app:layout_constraintStart_toStartOf="@+id/textAdminHomeRevenueMonthlyTitle"
                app:layout_constraintTop_toBottomOf="@+id/textAdminHomeRevenueMonthlyTitle"
                android:background="@drawable/bg_rectangle_outlined_rounded_corner"
                android:layout_marginTop="@dimen/_8sdp"
                android:backgroundTint="@color/pinkishGreyBlueSecondary" />

            <TextView
                android:id="@+id/textAdminHomeRevenueMonthlyTotalRevenueSubtitle"
                app:layout_constraintStart_toStartOf="@+id/bgAdminHomeRevenueMonthlyTotalRevenue"
                app:layout_constraintTop_toTopOf="@+id/bgAdminHomeRevenueMonthlyTotalRevenue"
