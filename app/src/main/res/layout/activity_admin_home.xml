                android:layout_height="wrap_content"
                android:text="RM 61023"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:fontFamily="@font/alata"
                android:gravity="start"
                android:layout_marginBottom="@dimen/_4sdp"/>

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/graph"
                app:layout_constraintTop_toTopOf="@+id/textAdminHomeRevenueYearlyTotalRevenueSubtitle"
                app:layout_constraintBottom_toBottomOf="@+id/textAdminHomeRevenueYearlyTotalRevenueBody"
                app:layout_constraintEnd_toEndOf="@+id/bgAdminHomeRevenueYearlyTotalRevenue"
                android:layout_marginEnd="@dimen/_6sdp" />

            <View
                android:id="@+id/bgAdminHomeRevenueYearlyTotalCustomers"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_56sdp"
                app:layout_constraintTop_toTopOf="@+id/bgAdminHomeRevenueYearlyTotalRevenue"
                app:layout_constraintBottom_toBottomOf="@+id/bgAdminHomeRevenueYearlyTotalRevenue"
                app:layout_constraintStart_toEndOf="@+id/bgAdminHomeRevenueYearlyTotalRevenue"
                android:background="@drawable/bg_rectangle_outlined_rounded_corner"
                android:backgroundTint="@color/GreenishGreySecondary"
                android:layout_marginStart="@dimen/_13sdp"/>

            <TextView
                android:id="@+id/textAdminHomeRevenueYearlyTotalCustomersSubtitle"
                app:layout_constraintStart_toStartOf="@+id/bgAdminHomeRevenueYearlyTotalCustomers"
                app:layout_constraintTop_toTopOf="@+id/bgAdminHomeRevenueYearlyTotalCustomers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Customers"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/alata"
