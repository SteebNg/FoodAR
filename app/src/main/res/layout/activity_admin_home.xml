<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminHomeActivity"
    android:background="@color/bg_dark">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textAdminHomeTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_16ssp"
            android:fontFamily="@font/alata"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/_8sdp"/>

        <TextView
            android:id="@+id/textAdminHomeManageMenu"
            app:layout_constraintTop_toTopOf="@+id/textAdminHomeTitle"
            app:layout_constraintBottom_toBottomOf="@+id/textAdminHomeTitle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage Menu"
            android:textColor="@color/blueText"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/alata"
            android:gravity="end"
            android:layout_marginEnd="@dimen/_8sdp"/>

        <View
            android:id="@+id/dividerAdminHome1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            app:layout_constraintTop_toBottomOf="@+id/textAdminHomeTitle"
            android:background="@color/hintColor"
            android:layout_marginTop="@dimen/_8sdp"/>

        <TextView
            android:id="@+id/textAdminHomeLocationTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerAdminHome1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Location:"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_16ssp"
            android:fontFamily="@font/alata"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_16sdp"/>

        <TextView
            android:id="@+id/textAdminHomeLocation"
            app:layout_constraintStart_toStartOf="@+id/textAdminHomeLocationTitle"
            app:layout_constraintTop_toBottomOf="@+id/textAdminHomeLocationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/alata"
            android:gravity="start" />

        <View
            android:id="@+id/dividerAdminHome2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/textAdminHomeLocation"
            android:background="@color/hintColor"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_12sdp" />

        <TextView
            android:id="@+id/textAdminHomeCurrentOrderTitle"
            app:layout_constraintStart_toStartOf="@+id/textAdminHomeLocation"
            app:layout_constraintTop_toBottomOf="@+id/dividerAdminHome2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Order"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:textSize="@dimen/_15ssp"
            android:fontFamily="@font/alata"
            android:gravity="start"
            android:layout_marginTop="@dimen/_8sdp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerAdminHomeCurrentOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textAdminHomeCurrentOrderTitle"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            tools:itemCount="2"
            tools:listitem="@layout/layout_admin_home_table_current_order_item_list"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>