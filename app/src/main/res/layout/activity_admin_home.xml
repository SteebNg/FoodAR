                android:textColor="@color/primary_text"
                android:textStyle="bold"
                android:textSize="@dimen/_15ssp"
                android:fontFamily="@font/alata"
                android:gravity="start"
                android:layout_marginTop="@dimen/_8sdp"/>

            <TextView
