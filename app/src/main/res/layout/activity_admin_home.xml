                android:layout_height="wrap_content"
                android:text="RM 4123"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:fontFamily="@font/alata"
                android:gravity="start"
                android:layout_marginBottom="@dimen/_4sdp"/>

            <View
                android:id="@+id/bgAdminHomeRevenueMonthlyTotalCustomers"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_56sdp"
                app:layout_constraintTop_toTopOf="@+id/bgAdminHomeRevenueMonthlyTotalRevenue"
                app:layout_constraintBottom_toBottomOf="@+id/bgAdminHomeRevenueMonthlyTotalRevenue"
                app:layout_constraintStart_toEndOf="@+id/bgAdminHomeRevenueMonthlyTotalRevenue"
                android:background="@drawable/bg_rectangle_outlined_rounded_corner"
                android:backgroundTint="@color/pinkishGreyBlueSecondary"
                android:layout_marginStart="@dimen/_13sdp"/>

            <TextView
                android:id="@+id/textAdminHomeRevenueMonthlyTotalCustomersSubtitle"
                app:layout_constraintStart_toStartOf="@+id/bgAdminHomeRevenueMonthlyTotalCustomers"
                app:layout_constraintTop_toTopOf="@+id/bgAdminHomeRevenueMonthlyTotalCustomers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Customers"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/alata"
                android:gravity="start"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_4sdp"/>

            <TextView
                android:id="@+id/textAdminHomeRevenueMonthlyTotalCustomersBody"
                app:layout_constraintStart_toStartOf="@+id/textAdminHomeRevenueMonthlyTotalCustomersSubtitle"
                app:layout_constraintTop_toBottomOf="@+id/textAdminHomeRevenueMonthlyTotalCustomersSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ordered"
                android:textColor="@color/hintColor"
                android:textSize="@dimen/_7ssp"
                android:fontFamily="@font/alata"
                android:gravity="start" />

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/account_circle_24"
                app:layout_constraintTop_toTopOf="@+id/textAdminHomeRevenueMonthlyTotalCustomersSubtitle"
                app:layout_constraintBottom_toBottomOf="@+id/textAdminHomeRevenueMonthlyTotalCustomersBody"
                app:layout_constraintEnd_toEndOf="@+id/bgAdminHomeRevenueMonthlyTotalCustomers"
                android:layout_marginEnd="@dimen/_6sdp" />

            <TextView
