                android:layout_height="wrap_content"
                android:text="Generated"
                android:textColor="@color/hintColor"
                android:textSize="@dimen/_7ssp"
                android:fontFamily="@font/alata"
                android:gravity="start" />

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/graph"
                app:layout_constraintTop_toTopOf="@+id/textAdminHomeRevenueMonthlyTotalRevenueSubtitle"
                app:layout_constraintBottom_toBottomOf="@+id/textAdminHomeRevenueMonthlyTotalRevenueBody"
                app:layout_constraintEnd_toEndOf="@+id/bgAdminHomeRevenueMonthlyTotalRevenue"
                android:layout_marginEnd="@dimen/_6sdp" />

            <TextView
