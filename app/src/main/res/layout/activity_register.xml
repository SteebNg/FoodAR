<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/bg_dark">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:id="@+id/logoRegister"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_40sdp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/logo_bg" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="24dp"
                android:src="@drawable/logo" />
        </FrameLayout>

        <TextView
            android:id="@+id/textRegisterTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/logoRegister"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Sign Up to FoodAR"
            android:fontFamily="@font/alata"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/primary_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textRegisterSecondaryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/textRegisterTitle"
            app:layout_constraintTop_toBottomOf="@+id/textRegisterTitle"
            android:text="For Unlimited Deals!!"
            android:fontFamily="@font/alata"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/textRegisterUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:fontFamily="@font/alata"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintTop_toBottomOf="@+id/textRegisterSecondaryTitle"
            app:layout_constraintStart_toStartOf="@+id/textRegisterSecondaryTitle"
            android:layout_marginTop="@dimen/_12sdp"
            android:textColor="@color/primary_text" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etRegisterUsername"
            app:layout_constraintTop_toBottomOf="@+id/textRegisterUsername"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/et_border_bg"
            android:fontFamily="@font/alata"
            android:hint="John Doe"
            android:paddingStart="@dimen/_8sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/hintColor"
            android:textSize="@dimen/_12ssp"
            android:inputType="textPersonName"
            android:textCursorDrawable="@null"/>

        <TextView
            android:id="@+id/textRegisterEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/alata"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintTop_toBottomOf="@+id/etRegisterUsername"
            app:layout_constraintStart_toStartOf="@+id/etRegisterUsername"
            android:layout_marginTop="@dimen/_8sdp"
            android:textColor="@color/primary_text" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etRegisterEmail"
            app:layout_constraintTop_toBottomOf="@+id/textRegisterEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/et_border_bg"
            android:fontFamily="@font/alata"
            android:hint="Example@gmail.com"
            android:paddingStart="@dimen/_8sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/hintColor"
            android:textSize="@dimen/_12ssp"
            android:inputType="textEmailAddress"
            android:textCursorDrawable="@null"/>

        <TextView
            android:id="@+id/textRegisterPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password (Minimum 6 Characters Long)"
            android:fontFamily="@font/alata"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintTop_toBottomOf="@+id/etRegisterEmail"
            app:layout_constraintStart_toStartOf="@+id/etRegisterEmail"
            android:layout_marginTop="@dimen/_8sdp"
            android:textColor="@color/primary_text" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etRegisterPassword"
            app:layout_constraintTop_toBottomOf="@+id/textRegisterPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/et_border_bg"
            android:fontFamily="@font/alata"
            android:hint="Your Password"
            android:paddingStart="@dimen/_8sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/hintColor"
            android:textSize="@dimen/_12ssp"
            android:inputType="textPassword"
            android:textCursorDrawable="@null"/>

        <ImageView
            android:id="@+id/buttonRegisterShowPassword"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="@+id/etRegisterPassword"
            app:layout_constraintTop_toTopOf="@+id/etRegisterPassword"
            app:layout_constraintBottom_toBottomOf="@+id/etRegisterPassword"
            android:src="@drawable/eyehide"
            android:layout_marginEnd="@dimen/_8sdp"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/buttonRegisterHidePassword"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="@+id/etRegisterPassword"
            app:layout_constraintTop_toTopOf="@+id/etRegisterPassword"
            app:layout_constraintBottom_toBottomOf="@+id/etRegisterPassword"
            android:src="@drawable/eyeshow"
            android:layout_marginEnd="@dimen/_8sdp"
            app:tint="@color/black"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textRegisterConfirmPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:fontFamily="@font/alata"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintTop_toBottomOf="@+id/etRegisterPassword"
            app:layout_constraintStart_toStartOf="@+id/etRegisterPassword"
            android:layout_marginTop="@dimen/_8sdp"
            android:textColor="@color/primary_text" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etRegisterConfirmPassword"
            app:layout_constraintTop_toBottomOf="@+id/textRegisterConfirmPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/et_border_bg"
            android:fontFamily="@font/alata"
            android:hint="Confirm Password"
            android:paddingStart="@dimen/_8sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/hintColor"
            android:textSize="@dimen/_12ssp"
            android:inputType="textPassword"
            android:textCursorDrawable="@null"/>

        <ImageView
            android:id="@+id/buttonRegisterShowConfirmPassword"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="@+id/etRegisterConfirmPassword"
            app:layout_constraintTop_toTopOf="@+id/etRegisterConfirmPassword"
            app:layout_constraintBottom_toBottomOf="@+id/etRegisterConfirmPassword"
            android:src="@drawable/eyehide"
            android:layout_marginEnd="@dimen/_8sdp"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/buttonRegisterHideConfirmPassword"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="@+id/etRegisterConfirmPassword"
            app:layout_constraintTop_toTopOf="@+id/etRegisterConfirmPassword"
            app:layout_constraintBottom_toBottomOf="@+id/etRegisterConfirmPassword"
            android:src="@drawable/eyeshow"
            android:layout_marginEnd="@dimen/_8sdp"
            app:tint="@color/black"
            android:visibility="gone"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/bg_rectangle_white"
            android:fontFamily="@font/alata"
            android:text="Register"
            android:textColor="@color/primary_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etRegisterConfirmPassword" />

        <ProgressBar
            android:id="@+id/progressBarRegister"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="@+id/buttonRegister"
            app:layout_constraintBottom_toBottomOf="@+id/buttonRegister"
            app:layout_constraintStart_toStartOf="@+id/buttonRegister"
            app:layout_constraintEnd_toEndOf="@+id/buttonRegister"
            android:visibility="gone"
            android:progressTint="@color/black"/>

        <TextView
            android:id="@+id/textRegisterError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/buttonRegister"
            app:layout_constraintStart_toStartOf="@+id/buttonRegister"
            app:layout_constraintEnd_toEndOf="@+id/buttonRegister"
            android:text="TEST"
            android:fontFamily="@font/alata"
            android:textColor="@color/warningRed"
            android:layout_marginTop="@dimen/_4sdp"
            android:textSize="@dimen/_12ssp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/textRegisterLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp"
            android:fontFamily="@font/alata"
            android:text="@string/have_an_account"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintTop_toBottomOf="@+id/textRegisterError"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/primary_text"
            android:layout_marginTop="@dimen/_12sdp"
            android:paddingBottom="@dimen/_4sdp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>