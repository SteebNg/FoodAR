<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lighterGreen"
    android:paddingTop="@dimen/_20sdp">

    <FrameLayout
        android:id="@+id/imageAdminHomeNavHead"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_16sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo" />
    </FrameLayout>

    <TextView
        android:id="@+id/textAdminHomeNavHeadTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textAdminHomeNavHeadDesc"
        app:layout_constraintStart_toEndOf="@+id/imageAdminHomeNavHead"
        android:text="Welcome to FoodAR!"
        android:fontFamily="@font/alata"
        style="bold"
        android:textSize="@dimen/_14ssp"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/primary_text"/>

    <TextView
        android:id="@+id/textAdminHomeNavHeadDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageAdminHomeNavHead"
        app:layout_constraintStart_toStartOf="@+id/textAdminHomeNavHeadTitle"
        android:text="Foods at your doorstep."
        android:fontFamily="@font/alata"
        android:textSize="@dimen/_10ssp"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/secondary_text"/>
</androidx.constraintlayout.widget.ConstraintLayout>