<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_20sdp"
    android:background="@drawable/bg_rectangle_rounded_corner">

    <ImageView
        android:id="@+id/imageDialogLocation"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/location_pin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/lightGreen" />

    <TextView
        android:id="@+id/textDialogLocationPermissionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageDialogLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Permission"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:layout_marginTop="@dimen/_8sdp"/>

    <TextView
        android:id="@+id/textDialogLocationPermissionDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDialogLocationPermissionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Granting location access lets us get your current location."
        android:maxWidth="@dimen/_200sdp"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/alata"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textDialogLocationPermissionDesc"
        app:layout_constraintStart_toStartOf="@+id/textDialogLocationPermissionDesc"
        app:layout_constraintEnd_toEndOf="@+id/textDialogLocationPermissionDesc"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/_8sdp" >

        <Button
            android:id="@+id/buttonDialogLocationCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textDialogCheckoutRemoveDesc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Cancel"
            android:backgroundTint="@color/grey"
            android:layout_marginEnd="@dimen/_8sdp"/>

        <Button
            android:id="@+id/buttonDialogLocationConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textDialogCheckoutRemoveDesc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Confirm"
            android:backgroundTint="@color/secondary_text" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>