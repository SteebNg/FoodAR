<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationSelectActivity"
    android:background="@color/bg_dark">

    <LinearLayout
        android:id="@+id/layoutLocationTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/bg_darker"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp">

        <TextView
            android:id="@+id/textLocationTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Select Location"
            android:maxWidth="@dimen/_160sdp"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/alata"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_weight="7"
            android:maxLines="3"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/buttonLocationBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_back_24"
        app:layout_constraintTop_toTopOf="@+id/layoutLocationTopBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/layoutLocationTopBar"
        android:layout_marginStart="@dimen/_8sdp" />

    <SearchView
        android:id="@+id/searchBarLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layoutLocationTopBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/search_bar"
        android:backgroundTint="@color/bg"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:queryHint="Search for locations"
        android:queryBackground="@null"
        android:iconifiedByDefault="false"/>
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerLocationList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/searchBarLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_8sdp"
        tools:listitem="@layout/layout_location_select_item_list"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</androidx.constraintlayout.widget.ConstraintLayout>