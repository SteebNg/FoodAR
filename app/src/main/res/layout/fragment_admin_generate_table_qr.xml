<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/bg_dark"
    tools:context=".AdminGenerateTableQrFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_24sdp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/headerCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_16sdp"
            app:cardElevation="@dimen/_4sdp"
            app:cardBackgroundColor="@color/lightGreen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_20sdp"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_48sdp"
                    android:layout_height="@dimen/_48sdp"
                    android:src="@drawable/qr_code_24"
                    app:tint="@color/primary_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="Generate Table QR Code"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:fontFamily="@font/alata" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="Create a unique QR code for your table"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/primary_text"
                    android:alpha="0.8"
                    android:fontFamily="@font/alata" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/inputCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_16sdp"
            app:cardElevation="@dimen/_2sdp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_20sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Table Number"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:fontFamily="@font/alata"
                    android:layout_marginBottom="@dimen/_8sdp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g., Table 1, A1, VIP-05"
                    app:boxStrokeColor="@color/lightGreen"
                    app:hintTextColor="@color/hintColor"
                    app:boxCornerRadiusTopStart="@dimen/_12sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_12sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_12sdp"
                    app:boxCornerRadiusBottomEnd="@dimen/_12sdp"
                    app:startIconTint="@color/lightGreen"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/qrTableNumEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:fontFamily="@font/alata"
                        android:inputType="text"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/qrGenerateQrButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_48sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="Generate QR Code"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:fontFamily="@font/alata"
                    app:backgroundTint="@color/lightGreen"
                    app:cornerRadius="@dimen/_12sdp"
                    app:icon="@drawable/qr_code_24"
                    app:iconGravity="textStart"
                    app:iconTint="@color/primary_text"
                    app:elevation="@dimen/_2sdp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/qrDisplayCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/_16sdp"
            app:cardElevation="@dimen/_4sdp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputCard"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_20sdp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your QR Code"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:fontFamily="@font/alata" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    app:cardCornerRadius="@dimen/_12sdp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F8F9FA">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_20sdp">

                        <ImageView
                            android:id="@+id/qrImageView"
                            android:layout_width="@dimen/_240sdp"
                            android:layout_height="@dimen/_240sdp"
                            android:background="@android:color/white"
                            android:contentDescription="Generated QR Code" />

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/qrTableNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:text="Table 1"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold"
                    android:textColor="@color/lightGreen"
                    android:fontFamily="@font/alata"
                    tools:text="Table 1" />

                <LinearLayout
                    android:id="@+id/buttonsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/qrDownloadButton"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_48sdp"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:text="Download"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/lightGreen"
                        android:fontFamily="@font/alata"
                        app:iconGravity="textStart"
                        app:iconTint="@color/lightGreen"
                        app:cornerRadius="@dimen/_12sdp"
                        app:strokeColor="@color/lightGreen"
                        app:strokeWidth="@dimen/_2sdp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:enabled="false"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/qrPrintButton"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_48sdp"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:text="Print"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/alata"
                        app:backgroundTint="@color/lightGreen"
                        app:iconGravity="textStart"
                        app:iconTint="@android:color/white"
                        app:cornerRadius="@dimen/_12sdp"
                        android:enabled="false"/>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/emptyStateLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputCard"
            tools:visibility="gone">

            <ImageView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:src="@drawable/qr_code_24"
                android:alpha="0.3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="No QR Code Yet"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:alpha="0.5"
                android:fontFamily="@font/alata" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="Enter a table number and generate"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/hintColor"
                android:fontFamily="@font/alata" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>