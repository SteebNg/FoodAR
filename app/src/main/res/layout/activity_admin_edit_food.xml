        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_16sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="@dimen/_2sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_16sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3D Model Files"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:fontFamily="@font/alata"
                    android:layout_marginBottom="@dimen/_16sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/_12sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OBJ File"
                        android:textSize="@dimen/_11ssp"
                        android:textColor="@color/hintColor"
                        android:fontFamily="@font/alata"
                        android:layout_marginBottom="@dimen/_8sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="@dimen/_12sdp">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/file_24" />

                        <TextView
                            android:id="@+id/textAdminEditFoodObjFileName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No file selected"
                            android:textColor="@color/hintColor"
                            android:fontFamily="@font/alata"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:singleLine="true"
                            android:ellipsize="end" />

                        <Button
                            android:id="@+id/buttonAdminEditFoodUploadObj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Browse"
                            android:fontFamily="@font/alata"
                            android:textColor="@color/blueText"
                            android:textSize="@dimen/_10ssp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <ImageView
                            android:id="@+id/buttonAdminEditFoodDeleteObj"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:textSize="@dimen/_10ssp"
                            android:src="@drawable/delete_forever_24"
                            android:layout_gravity="end|center"
                            android:visibility="gone"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/_12sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MTL File"
                        android:textSize="@dimen/_11ssp"
                        android:textColor="@color/hintColor"
                        android:fontFamily="@font/alata"
                        android:layout_marginBottom="@dimen/_8sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/file_24" />

                        <TextView
                            android:id="@+id/textAdminEditFoodMtlFileName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No file selected"
                            android:textColor="@color/hintColor"
                            android:fontFamily="@font/alata"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:singleLine="true"
                            android:ellipsize="end" />

                        <Button
                            android:id="@+id/buttonAdminEditFoodUploadMtl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Browse"
                            android:textColor="@color/blueText"
                            android:fontFamily="@font/alata"
                            android:textSize="@dimen/_10ssp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <ImageView
                            android:id="@+id/buttonAdminEditFoodDeleteMtl"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:textSize="@dimen/_10ssp"
                            android:src="@drawable/delete_forever_24"
                            android:layout_gravity="end|center"
                            android:visibility="gone"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JPG Texture File"
                        android:textSize="@dimen/_11ssp"
                        android:textColor="@color/hintColor"
                        android:layout_marginBottom="@dimen/_8sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_12sdp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/file_24" />

                        <TextView
                            android:id="@+id/textAdminEditFoodJpgFileName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No file selected"
                            android:textColor="@color/hintColor"
                            android:fontFamily="@font/alata"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:singleLine="true"
                            android:ellipsize="end" />

                        <Button
                            android:id="@+id/buttonAdminEditFoodUploadJpg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Browse"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/blueText"
                            android:fontFamily="@font/alata"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <ImageView
                            android:id="@+id/buttonAdminEditFoodDeleteJpg"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:textSize="@dimen/_10ssp"
                            android:src="@drawable/delete_forever_24"
                            android:layout_gravity="end|center"
                            android:visibility="gone"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAdminEditFoodSubmit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:text="Update Food"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/blueText"
                android:fontFamily="@font/alata"
                android:background="@drawable/bg_chip"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:textAllCaps="false"
                android:visibility="visible"/>

            <ProgressBar
                android:id="@+id/progressAdminEditFood"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_gravity="center"
                android:indeterminateTint="@color/black"
                android:visibility="gone"/>
        </FrameLayout>
    </LinearLayout>
</ScrollView>