<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckoutActivity"
    android:background="@color/bg_dark">

    <LinearLayout
        android:id="@+id/layoutCheckoutTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/bg_darker"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp">

        <TextView
            android:id="@+id/textCheckoutTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Checkout"
            android:maxWidth="@dimen/_160sdp"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_16ssp"
            android:fontFamily="@font/alata"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_weight="7"
            android:maxLines="3"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageCheckoutBack"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/layoutCheckoutTopBar"
        app:layout_constraintBottom_toBottomOf="@id/layoutCheckoutTopBar"
        android:src="@drawable/arrow_back_24"
        android:layout_margin="@dimen/_8sdp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/layoutCheckoutTopBar"
        app:layout_constraintBottom_toTopOf="@+id/layoutCheckoutBottomBar"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerCheckoutFoodList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/layout_checkout_food_item_list"
                tools:itemCount="3" />
            
            <View
                android:id="@+id/dividerCheckout1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                app:layout_constraintTop_toBottomOf="@+id/recyclerCheckoutFoodList"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_28sdp"
                android:layout_marginEnd="@dimen/_28sdp" />

            <TextView
                android:id="@+id/textCheckoutPaymentTitle"
                app:layout_constraintTop_toBottomOf="@+id/dividerCheckout1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Payment:"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/alata"
                android:textStyle="bold"
                android:gravity="start"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_8sdp"/>

            <LinearLayout
                android:id="@+id/layoutCheckoutMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/textCheckoutPaymentTitle"
                app:layout_constraintStart_toStartOf="@+id/textCheckoutPaymentTitle"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="center"
                android:background="@drawable/bg_rectangle_outlined_rounded_corner"
                android:paddingStart="@dimen/_4sdp"
                android:paddingEnd="@dimen/_4sdp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/textCheckoutPaymentTitle"
                    app:layout_constraintStart_toStartOf="@+id/textCheckoutPaymentTitle"
                    android:layout_marginTop="@dimen/_4sdp">

                    <View
                        android:layout_width="@dimen/_44sdp"
                        android:layout_height="@dimen/_44sdp"
                        android:background="@drawable/rectangle_food_container_bg" />

                    <ImageView
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:src="@drawable/attach_money_24"
                        android:layout_gravity="center" />
                </FrameLayout>

                <TextView
                    android:id="@+id/textCheckoutPaymentTextCash"
                    app:layout_constraintStart_toStartOf="@+id/layoutCheckoutMoney"
                    app:layout_constraintTop_toBottomOf="@+id/layoutCheckoutMoney"
                    app:layout_constraintEnd_toEndOf="@+id/layoutCheckoutMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/alata"
                    android:textStyle="bold"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutCheckoutBanking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@+id/layoutCheckoutMoney"
                app:layout_constraintTop_toTopOf="@+id/layoutCheckoutMoney"
                app:layout_constraintBottom_toBottomOf="@+id/layoutCheckoutMoney"
                android:gravity="center"
                android:layout_marginStart="@dimen/_8sdp"
                android:paddingStart="@dimen/_4sdp"
                android:paddingEnd="@dimen/_4sdp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/textCheckoutPaymentTitle"
                    app:layout_constraintStart_toStartOf="@+id/textCheckoutPaymentTitle"
                    android:layout_marginTop="@dimen/_4sdp">

                    <View
                        android:layout_width="@dimen/_44sdp"
                        android:layout_height="@dimen/_44sdp"
                        android:background="@drawable/rectangle_food_container_bg" />

                    <ImageView
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:src="@drawable/bank"
                        android:layout_gravity="center"
                        android:padding="@dimen/_3sdp"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/textCheckoutPaymentTextBanking"
                    app:layout_constraintStart_toStartOf="@+id/layoutCheckoutMoney"
                    app:layout_constraintTop_toBottomOf="@+id/layoutCheckoutMoney"
                    app:layout_constraintEnd_toEndOf="@+id/layoutCheckoutMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Banking"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/alata"
                    android:textStyle="bold"
                    android:gravity="center" />
            </LinearLayout>

            <View
                android:id="@+id/dividerCheckout2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                app:layout_constraintTop_toBottomOf="@+id/layoutCheckoutMoney"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_28sdp"
                android:layout_marginEnd="@dimen/_28sdp" />

            <LinearLayout
                android:id="@+id/layoutCheckoutDineInMode"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/dividerCheckout2"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:visibility="gone"
                android:paddingBottom="@dimen/_8sdp">

                <TextView
                    android:id="@+id/textCheckoutTableNumTitle"
                    app:layout_constraintTop_toBottomOf="@+id/dividerCheckout2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Table No."
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_16ssp"
                    android:fontFamily="@font/alata"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"/>
                
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etCheckoutTableNum"
                    android:layout_width="@dimen/_64sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:background="@drawable/bg_rectangle_white"
                    android:backgroundTint="@color/bg"
                    android:fontFamily="@font/alata"
                    android:text="100"
                    android:gravity="center"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:id="@+id/textCheckoutChangeToDelivery"
                    app:layout_constraintTop_toBottomOf="@+id/dividerCheckout2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change to Delivery"
                    android:textColor="@color/blueText"
                    android:textSize="@dimen/_8ssp"
                    android:fontFamily="@font/alata"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_4sdp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutCheckoutDeliveryMode"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/dividerCheckout2"
                android:orientation="vertical"
                android:gravity="start"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:paddingBottom="@dimen/_8sdp">

                <TextView
                    android:id="@+id/textCheckoutDeliveryTitle"
                    app:layout_constraintTop_toBottomOf="@+id/dividerCheckout2"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery Details"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_16ssp"
                    android:fontFamily="@font/alata"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp">

                    <FrameLayout
                        android:id="@+id/layoutCheckoutDestinationPinLogo"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:background="@drawable/bg_chip" />

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/location_pin"
                            android:layout_gravity="center" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/textCheckoutDeliveryDestinationName"
                        app:layout_constraintStart_toEndOf="@+id/layoutCheckoutDestinationPinLogo"
                        app:layout_constraintTop_toTopOf="@+id/layoutCheckoutDestinationPinLogo"
                        app:layout_constraintBottom_toBottomOf="@+id/layoutCheckoutDestinationPinLogo"
                        app:layout_constraintEnd_toStartOf="@+id/imageCheckoutDestinationChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/_10ssp"
                        android:maxWidth="@dimen/_200sdp"
                        android:fontFamily="@font/alata"
                        android:gravity="start"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_3sdp"/>

                    <ImageView
                        android:id="@+id/imageCheckoutDestinationChange"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/baseline_keyboard_arrow_right_24"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/textCheckoutChangeToDineIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change to Dine-in"
                    android:textColor="@color/blueText"
                    android:textSize="@dimen/_8ssp"
                    android:fontFamily="@font/alata"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_4sdp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <View
        android:id="@+id/layoutCheckoutBottomBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_68sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_rectangle_with_top_rounded_corners"
        android:backgroundTint="@color/darkOverlap" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/layoutCheckoutBottomBar"
        app:layout_constraintTop_toTopOf="@+id/layoutCheckoutBottomBar"
        app:layout_constraintBottom_toBottomOf="@+id/layoutCheckoutBottomBar"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_12sdp">

        <TextView
            android:id="@+id/textCheckoutBottomTotalAmountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount"
            android:textColor="@color/hintColor"
            android:textSize="@dimen/_9ssp"
            android:fontFamily="@font/alata"
            android:textStyle="bold"
            android:gravity="start" />

        <TextView
            android:id="@+id/textCheckoutBottomTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RM 11.99"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/alata"
            android:textStyle="bold"
            android:gravity="start" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonCheckoutPlaceOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Order"
        app:layout_constraintTop_toTopOf="@+id/layoutCheckoutBottomBar"
        app:layout_constraintEnd_toEndOf="@+id/layoutCheckoutBottomBar"
        app:layout_constraintBottom_toBottomOf="@+id/layoutCheckoutBottomBar"
        android:backgroundTint="@color/warningRed"
        android:layout_marginEnd="@dimen/_8sdp"
        android:textColor="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>