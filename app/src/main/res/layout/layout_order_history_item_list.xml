<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/_8sdp">

    <TextView
        android:id="@+id/textLayoutHistoryDate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2-01-2025"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/alata" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/hintColor"
        app:layout_constraintTop_toTopOf="@+id/textLayoutHistoryDate"
        app:layout_constraintBottom_toBottomOf="@+id/textLayoutHistoryDate"
        app:layout_constraintEnd_toStartOf="@+id/textLayoutHistoryDate"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/hintColor"
        app:layout_constraintTop_toTopOf="@+id/textLayoutHistoryDate"
        app:layout_constraintBottom_toBottomOf="@+id/textLayoutHistoryDate"
        app:layout_constraintStart_toEndOf="@+id/textLayoutHistoryDate"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerLayoutHistoryFoods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textLayoutHistoryDate"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/layout_order_history_food_item_list"
        tools:itemCount="3"/>

</androidx.constraintlayout.widget.ConstraintLayout>