                        android:id="@+id/textAdminHomeRevenueYearlyTotalCustomersSubtitle"
                        app:layout_constraintStart_toStartOf="@+id/bgAdminHomeRevenueYearlyTotalCustomers"
                        app:layout_constraintTop_toTopOf="@+id/bgAdminHomeRevenueYearlyTotalCustomers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Customers"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/alata"
                        android:gravity="start"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_4sdp"/>

                    <TextView
                        android:id="@+id/textAdminHomeRevenueYearlyTotalCustomersBody"
                        app:layout_constraintStart_toStartOf="@+id/textAdminHomeRevenueYearlyTotalCustomersSubtitle"
                        app:layout_constraintTop_toBottomOf="@+id/textAdminHomeRevenueYearlyTotalCustomersSubtitle"
