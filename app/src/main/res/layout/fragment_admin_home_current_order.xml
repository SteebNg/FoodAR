                        android:layout_marginTop="@dimen/_8sdp"
                        android:backgroundTint="@color/pinkishGreyBlueSecondary" />

                    <TextView
                        android:id="@+id/textAdminHomeRevenueMonthlyTotalRevenueSubtitle"
                        app:layout_constraintStart_toStartOf="@+id/bgAdminHomeRevenueMonthlyTotalRevenue"
                        app:layout_constraintTop_toTopOf="@+id/bgAdminHomeRevenueMonthlyTotalRevenue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Revenue"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/alata"
                        android:gravity="start"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_4sdp"/>

                    <TextView
                        android:id="@+id/textAdminHomeRevenueMonthlyTotalRevenueBody"
                        app:layout_constraintStart_toStartOf="@+id/textAdminHomeRevenueMonthlyTotalRevenueSubtitle"
                        app:layout_constraintTop_toBottomOf="@+id/textAdminHomeRevenueMonthlyTotalRevenueSubtitle"
