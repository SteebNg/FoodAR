                        app:layout_constraintTop_toTopOf="@+id/textAdminHomeRevenueYearlyTotalCustomersSubtitle"
                        app:layout_constraintBottom_toBottomOf="@+id/textAdminHomeRevenueYearlyTotalCustomersBody"
                        app:layout_constraintEnd_toEndOf="@+id/bgAdminHomeRevenueYearlyTotalCustomers"
