<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AdminHomeCurrentOrderFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_dark">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageAdminHomeProfilePic"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/_100sdp"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            app:layout_constraintEnd_toStartOf="@+id/textAdminHomeProfileName"
            app:layout_constraintTop_toTopOf="@+id/textAdminHomeTitle"
            app:layout_constraintBottom_toBottomOf="@+id/textAdminHomeTitle"
            android:src="@drawable/account_circle_24"
            android:layout_marginEnd="@dimen/_8sdp"/>

        <TextView
            android:id="@+id/textAdminHomeProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/alata"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@+id/textAdminHomeTitle"
            app:layout_constraintBottom_toBottomOf="@+id/textAdminHomeTitle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_8sdp"
            android:maxLength="20"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/textAdminHomeTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_16ssp"
            android:fontFamily="@font/alata"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/_8sdp"/>

        <View
            android:id="@+id/dividerAdminHome1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            app:layout_constraintTop_toBottomOf="@+id/textAdminHomeTitle"
            android:background="@color/hintColor"
            android:layout_marginTop="@dimen/_12sdp"/>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/swipeRefreshAdminHome"
            android:paddingBottom="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@+id/dividerAdminHome1"
            app:layout_constraintBottom_toBottomOf="parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textAdminHomeLocationTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Location:"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/_16ssp"
                        android:fontFamily="@font/alata"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_16sdp"/>

                    <TextView
                        android:id="@+id/textAdminHomeLocation"
                        app:layout_constraintStart_toStartOf="@+id/textAdminHomeLocationTitle"
                        app:layout_constraintTop_toBottomOf="@+id/textAdminHomeLocationTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/_13ssp"
                        android:fontFamily="@font/alata"
                        android:gravity="start" />

                    <View
                        android:id="@+id/dividerAdminHome2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:layout_constraintTop_toBottomOf="@+id/textAdminHomeLocation"
                        android:background="@color/hintColor"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_12sdp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerAdminHomeCurrentOrder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/dividerAdminHome2"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        tools:listitem="@layout/layout_admin_current_order_item_list" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>