                        android:text="Ordered"
                        android:textColor="@color/hintColor"
                        android:textSize="@dimen/_7ssp"
                        android:fontFamily="@font/alata"
                        android:gravity="start" />

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/account_circle_24"
                        app:layout_constraintTop_toTopOf="@+id/textAdminHomeRevenueMonthlyTotalCustomersSubtitle"
                        app:layout_constraintBottom_toBottomOf="@+id/textAdminHomeRevenueMonthlyTotalCustomersBody"
                        app:layout_constraintEnd_toEndOf="@+id/bgAdminHomeRevenueMonthlyTotalCustomers"
                        android:layout_marginEnd="@dimen/_6sdp" />

                    <TextView
                        android:id="@+id/textAdminHomeRevenueMonthlyTotalCustomersNum"
                        app:layout_constraintStart_toStartOf="@+id/textAdminHomeRevenueMonthlyTotalCustomersSubtitle"
                        app:layout_constraintBottom_toBottomOf="@+id/bgAdminHomeRevenueMonthlyTotalCustomers"
