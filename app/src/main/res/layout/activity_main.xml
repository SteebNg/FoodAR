<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/bg_dark"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/layoutHomeTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="@dimen/_4sdp"
        android:paddingEnd="@dimen/_12sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:gravity="center_vertical|start"
        android:background="@color/bg_darker">

        <ImageView
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:src="@drawable/location_pin"
            app:tint="@color/lightGreen"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/textHomeLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Location"
            android:maxWidth="@dimen/_160sdp"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/alata"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_weight="7"
            android:maxLines="3"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/buttonHomeShoppingCart"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_28sdp"
            android:src="@drawable/shopping_cart"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_weight="0.8"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/buttonHomeProfile"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:src="@drawable/capybara"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/_100sdp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/layoutHomeTopBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <SearchView
                android:id="@+id/searchBarHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/search_bar"
                android:backgroundTint="@color/bg"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:queryHint="Search for delicacies"
                android:queryBackground="@null"
                android:iconifiedByDefault="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/searchBarHome"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutHomeOrderAgain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/searchBarHome"
                    app:layout_constraintStart_toStartOf="parent"
                    android:orientation="vertical"
                    android:background="@color/neutral_secondary"
                    android:layout_marginTop="@dimen/_12sdp">

                    <TextView
                        android:id="@+id/textHomeOrderAgain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="Order Again"
                        android:fontFamily="@font/alata"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:textSize="@dimen/_16ssp"
                        android:textColor="@color/primary_text" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerHomeOrderAgain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/textHomeOrderAgain"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/layout_order_again_item_list" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp">

                    <LinearLayout
                        android:id="@+id/buttonHomeFoodCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/bg_chip"
                        android:paddingStart="@dimen/_12sdp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_4sdp">

                        <TextView
                            android:id="@+id/textHomeFoodCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:text="All menu"
                            android:fontFamily="@font/alata"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/primary_text" />

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            app:layout_constraintTop_toTopOf="@+id/textHomeFoodCategory"
                            app:layout_constraintStart_toEndOf="@id/textHomeFoodCategory"
                            app:layout_constraintBottom_toBottomOf="@+id/textHomeFoodCategory"
                            android:src="@drawable/baseline_keyboard_arrow_right_24"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@drawable/bg_chip"
                            android:backgroundTint="@color/bg_dark"
                            android:layout_marginStart="@dimen/_4sdp"/>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerHomeMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/buttonHomeFoodCategory"
                        app:spanCount="2"
                        tools:listitem="@layout/layout_all_menu_item_list" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>